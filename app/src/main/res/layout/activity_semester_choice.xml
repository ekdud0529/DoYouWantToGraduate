<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStd"
    android:orientation="vertical"
    tools:context=".SemesterChoice">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/whitesymbol"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="160dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/number_choice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">



            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/left_back_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:id="@+id/layout_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/one_one_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/one_one_button"
                                android:text="@string/sem1_1"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/two_one_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/two_one_button"
                                android:text="@string/sem2_1"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/three_one_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/three_one_button"
                                android:text="@string/sem3_1"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/four_one_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/four_one_button"
                                android:text="@string/sem4_1"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:id="@+id/layout_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/one_two_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/one_three_button"
                                android:text="@string/sem1_2"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/two_two_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/two_two_button"
                                android:text="@string/sem2_2"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/three_two_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/three_two_button"
                                android:text="@string/sem3_2"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/four_two_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <Button
                                android:id="@+id/four_two_button"
                                android:text="@string/sem4_2"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginStart="30dp"
                                android:background="@drawable/spinner_bnt"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/extra_semester"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15">

        <Button
            android:layout_width="match_parent"
            android:text="@string/sem_add"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/listrec"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/symbol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/purplesymbol"
                />

            <ImageButton
                android:id="@+id/home_bnt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:src="@drawable/browser"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/timet_bnt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/calendar"
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/fin_bnt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/human"
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>