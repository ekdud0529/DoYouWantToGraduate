<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStd"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mng"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitesymbol"
            android:layout_marginTop="70dp"
            android:layout_marginStart="300dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:stretchColumns="1,2"
            android:layout_centerVertical="true">

            <TableRow
                android:background="@drawable/listrec">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="종류"
                    android:textSize="25sp"
                    android:textColor="#00000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="이수학점"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="최대/최소"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="교양"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>
            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="설계"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>
            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="BSM"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>
            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="전공"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>
            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="일선"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>
            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="최종"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="140"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/symbol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/purplesymbol"
                />

            <ImageButton
                android:id="@+id/home"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:src="@drawable/browser"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/timetable"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/calendar"
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/fin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/human"
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>