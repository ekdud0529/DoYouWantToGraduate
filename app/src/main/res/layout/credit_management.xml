<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStd"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mng"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/whitesymbol"
            android:layout_marginTop="40dp"
            android:layout_marginStart="350dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:stretchColumns="*"
            android:paddingTop="0dp"
            android:layout_centerVertical="true"
            android:background="@drawable/listrec">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="종류"
                    android:textSize="25sp"
                    android:textColor="#00000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="이수학점"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="최소/최대"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

            <TableRow
                android:background="#F7F2D1"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="교양"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/elect1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/elect2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="설계"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:text="12"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:background="#F7F2D1"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="BSM"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/bsm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:text="22"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="전필"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/majorrq1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/majorrq2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

            <TableRow
                android:background="#F7F2D1"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="전선"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/major1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/major2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="일선"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/general1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/general2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

            <TableRow
                android:background="@drawable/spinner_bnt"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="최종"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:id="@+id/fin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="140"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#00000000"/>

            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/symbol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/purplesymbol"
                />

            <ImageButton
                android:id="@+id/home_bnt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:src="@drawable/browser"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/fin_bnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/human" />

            <ImageButton
                android:id="@+id/set_bnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/setting"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>