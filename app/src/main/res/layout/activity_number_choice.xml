<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStd"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/number_choice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/number14"
                android:text="@string/num14"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd = "100dp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/number1516"
                android:text="@string/num1516"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd = "100dp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/number1718"
                android:text="@string/num1718"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd = "100dp"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/number19"
                android:text="@string/num19"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd = "100dp"
                android:layout_width="200dp"
                android:layout_height="90dp" />


            <Button
                android:id="@+id/number_complete"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd = "150dp"
                android:text="@string/number_complete"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/listrec"/>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/symbol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/purplesymbol"
                />

            <ImageButton
                android:id="@+id/home"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:src="@drawable/browser"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/timetable"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/calendar"
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/fin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/human"
                android:background="#FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>